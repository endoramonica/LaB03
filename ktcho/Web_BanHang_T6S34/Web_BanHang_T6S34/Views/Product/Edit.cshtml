@model Web_BanHang_T6S34.Models.Product
<h2>Chỉnh sửa sản phẩm</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
    </div>
    <div>
        <label asp-for="ImageUrl">Hình ảnh</label>
        <input type="file" name="file_Image" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="/@Model.ImageUrl" alt="Hình ảnh sản phẩm" style="max-width: 200px;" />
        }
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>